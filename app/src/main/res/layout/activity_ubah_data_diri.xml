<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/minicircle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="25dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Mega Melati"
                                android:textSize="18dp"
                                android:fontFamily="@font/robotobold"
                                android:gravity="right" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Peternak Sapi"
                                android:fontFamily="@font/robotoregular"
                                android:textStyle="bold"
                                android:gravity="right" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Depok, Jawa Barat"
                                android:fontFamily="@font/robotitalic"
                                android:textStyle="bold"
                                android:gravity="right" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Nama Lengkap"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/nama2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:hint="John Doe"
                        android:textSize="12dp"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Email"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/email2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Johndoe@gmail.com"
                        android:textSize="12dp"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/username1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Username"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/username2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Johndoe"
                        android:textSize="12dp"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>


                    <TextView
                        android:id="@+id/password1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Password"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/password2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:hint="******"
                        android:textSize="12dp"
                        android:inputType="textPassword"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/confirm1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Confirm Password"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/confirm2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:hint="******"
                        android:textSize="12dp"
                        android:inputType="textPassword"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/alamat1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Alamat Lengkap"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/alamat2"
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/hp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Nomor Handphone"
                        android:textColor="@color/recButton" />

                    <EditText
                        android:id="@+id/hp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14dp"
                        android:text="Jenis Ternak"
                        android:textColor="@color/recButton" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:text="Sapi"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:text="Kambing"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:text="Domba"
                        android:background="@drawable/bordercolor"
                        android:padding="8dp"/>

                    <Button
                        android:id="@+id/masuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rectanglebutton"
                        android:fontFamily="@font/robotoregular"
                        android:text="Simpan Profil Anda"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:layout_marginBottom="30dp"/>


                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_navigation_view" />

</android.support.constraint.ConstraintLayout>